<div class="column">
  <nav class="panel">
    <p class="panel-heading">Follow/Unfollow</p>
      <% @users.each do |user| %>
        <div class="panel-block">
          <article class="media">
            <div class="media-left">
              <figure class="image is-32x32">
                <img src="https://bulma.io/images/placeholders/64x64.png">
              </figure>
            </div>
            <div class="media-content">
              <div class="content">
                <p>
                  <strong><%= link_to user.name, {controller: 'users', action: 'show', username: user.username }, class: 'linkto' %></strong><br>
                  <small><%= user.username %></small>
                  <% @user = user %>
                  <%= render 'users/follow_form', user: @user %>
                </p>
              </div>
            </div>
          </article>
        </div>
      <% end if @users.present? %>
  </nav>
</div>
